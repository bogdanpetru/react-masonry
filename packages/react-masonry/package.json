{
  "name": "react-masonry",
  "version": "1.0.3",
  "main": "dist",
  "module": "dist",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/bogdanpetru/react-masonry.git"
  },
  "keywords": [
    "react",
    "grid",
    "layout",
    "masonry"
  ],
  "homepage": "http://bogdanpetru.github.io/react-masonry",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn types-gen-dts && yarn bundle",
    "bundle": "tsc",
    "types-gen-dts": "tsc src/index.ts --emitDeclarationOnly --declaration --outDir dist --jsx react-jsx --esModuleInterop",
    "test": "jest ./src --passWithNoTests",
    "clean": "rm -rf dist",
    "clean:deps": "rm -rf node_modules",
    "gen-docs": "yarn typedoc ./src/types.ts --json ./types.json",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@jest/globals": "29.3.1",
    "@types/jest": "29.2.4",
    "@types/lodash.debounce": "4.0.7",
    "@types/node": "18.11.17",
    "@types/react": "18.0.25",
    "jest": "29.3.1",
    "ts-jest": "29.0.3",
    "typedoc": "0.23.23",
    "typescript": "4.9.4"
  }
}
