{
  "include": ["./src/index.ts"],
  "exclude": ["node_modules", "./src/utils/__tests__"],
  "compilerOptions": {
    "strict": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "react",
    "incremental": true
  }
}
